<html>
<head>
    <title>RootsNBlues</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">

    <!-- jQuery -->
    <script src="/js/jquery.min.js"></script>

    <script>
        $(document).ready(function() {
            $.getJSON("/api/graphql?query={festivals{id,name,description}}")
                .then(function(response) {
                    //TODO: check errors

                    var data = response.data;
                    var festivals = data.festivals;

                    for (var i = 0; i < festivals.length; i++) {
                        var cardUrl = "/views/festival_card?festival=" + JSON.stringify(festivals[i]);

                        $.get(cardUrl).then(function(response) {
                            $("#content").append(response);
                        });
                    }
                });
        });
    </script>

    <style>
        body {
            padding: 10px;
        }
    </style>
</head>
<body>
    <h1>GraphQL Demo</h1>

    <div id="content">
    </div>
</body>
</html>