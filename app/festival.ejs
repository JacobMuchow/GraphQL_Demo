<html>
<head>
    <title>RootsNBlues</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">

    <!-- jQuery -->
    <script src="/js/jquery.min.js"></script>

    <script>
        $(document).ready(function() {
            var query = `{
                festival(id: <%= festivalId %>) {
                    name,
                    description,
                    events {
                        id,
                        event_time,
                        description,
                        artist {
                            id,
                            name,
                            description
                        }
                    }
                }
            }`;

            var payload = {
                query: query
            };

            $.post("/api/graphql", payload)
                .then(function(response) {
                    //TODO: check errors

                    var data = response.data;
                    var events = data.festival.events;

                    console.log(events);

                    for (var i = 0; i < events.length; i++) {
                        var cardUrl = "/views/event_card?event=" + JSON.stringify(events[i]);

                        $.get(cardUrl).then(function(response) {
                            $("#content").append(response);
                        });
                    }
                });
        });
    </script>

    <style>
        body {
            padding: 10px;
        }
    </style>
</head>
<body>
    <h1>GraphQL Demo</h1>

    <div id="content">
    </div>
</body>
</html>